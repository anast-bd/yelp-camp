<% include ../partials/header %>

<div class='container index-container mb-4'>
	<header class='jumbotron'>
		<div class='container'>
			<div class='jumbotron-text'>Welcome To YelpCamp!</div>
			<p>View our hand-picked campgrounds from all over the world</p>
			<a class='btn btn-lg btn-basic' href='/campgrounds/new'>Add New Campground</a>
		</div>
	</header>
		<div style='display: flex; flex-wrap: wrap;'>
			<% campgrounds.forEach((campground) =>{ %>
				<div class='col-lg-4 col-md-6 col-sm-12 px-0'>
					<div class='card'>
						<img class='card-img bd-placeholder-img card-img-top' height="225" src='<%= campground.image %>' preserveAspectRatio="xMidYMid slice" role="img">
						<div class='card-img-overlay'>
							<div class='card-title text-left'>
								<%= campground.name %>
							</div>
							<p class='card-text text-left'>
								<% include ../partials/country-name-converter %>

									<%= //getCountryName(campground.location.split(', ').slice(-1))%>

							</p>
						</div>
						<a class='stretched-link' href='/campgrounds/<%= campground._id %>'></a>
					</div>
				</div>
			<% }) %>
		</div>
</div>

<% include ../partials/footer %>