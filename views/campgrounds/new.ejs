<% include ../partials/header %>


<div class='container'>	
	<div class='form-header col-md-12 text-center pb-0'>
		<div class='form-header__string'>
				 Create a New Campground
		</div>
	</div>	
	<div style='width: 30%; margin: 25px auto;'>
		<form action='/campgrounds' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='name' name='name'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='image URL' name='image'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='description' name='description'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='price' name='price'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Yosemite National Park, CA' name='location'>
			</div>
			<div class='form-group' >
				<button class='btn btn-lg btn-block btn-basic'> Submit!
				</button>
			</div>
		</form>
		<div class='form-footer'>
			<a href='/campgrounds' class='form-footer__back'>Go Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>