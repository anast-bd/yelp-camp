<% include ../partials/header %>


<div class='container'>
	<div class='row'>
		<div class='form-header col-md-12 text-center pb-0'>
			<div class='form-header__string'>
				Edit Comment
			</div>
		</div>	
		<div style='width: 30%; margin: 25px auto;'>
		<form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'>
			</div>
			<div class='form-group'>
				<button class='btn btn-lg btn-block btn-basic'> Submit!
				</button>
			</div>
		</form>
		<div class='form-footer'>
			<a href='/campgrounds/<%= campground_id %>'>Go Back</a>		
		</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>